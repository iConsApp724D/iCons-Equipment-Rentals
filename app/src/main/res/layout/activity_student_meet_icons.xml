<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentMeetIcons">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="202dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="40dp"
        android:text="On Shift: ILC"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.783" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="321dp"
        android:layout_height="124dp"
        android:layout_marginBottom="372dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:onClick="michaelpatchell"
                android:text="Michael Patchell Elec"
                app:backgroundTint="#0B426B" />

            <Button
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:text="Aubrey Graham Mech"
                app:backgroundTint="#0B426B" />

            <Button
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:text="Margot Robbie Mining"
                app:backgroundTint="#0B426B" />


            <Button
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:text="Captain Crunch Eng Chem"
                app:backgroundTint="#0B426B" />
        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginBottom="40dp"
        android:text="On Shift: Stirling"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView2"
        app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="321dp"
        android:layout_height="124dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:text="Han Solo Eng Phys"
                app:backgroundTint="#0B426B" />

            <Button
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:text="Somi Goat Eng Phys"
                app:backgroundTint="#0B426B" />

            <Button
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:text="John Cena Eng Phys"
                app:backgroundTint="#0B426B" />


            <Button
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:text="Dan Smith Eng Phys"
                app:backgroundTint="#0B426B" />

        </LinearLayout>

    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>